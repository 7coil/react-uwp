{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"moduleResolution": "node",
		"jsx": "react",
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": true,
		"allowJs": true,
		"noLib": false,
		"lib": ["dom", "es5"],
		"paths": {},
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"filesGlob": [
		"**/*.ts",
		"**/*.tsx"
	],
	"include": [
		"*.ts",
		"**/*.ts",
		"**/*.tsx",
		"__mocks__/**/*.ts",
		"__mocks__/**/*.tsx",
		"typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
