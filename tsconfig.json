{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"moduleResolution": "node",
		"allowJs": false,
		"declaration": true,
		"declarationDir": "./typings/build",
		"jsx": "react",
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitAny": true,
		"outDir": "./build",
		"noLib": false,
		"lib": ["dom", "es5"],
		"typeRoots": [
			"../../node_modules/@types"
		]
	},
	"filesGlob": [
		"**/*.ts",
		"**/*.tsx"
	],
	"include": [
		"*.ts",
		"**/*.ts",
		"**/*.tsx",
		"__mocks__/**/*.ts",
		"__mocks__/**/*.tsx",
		"../../typings/**/*.d.ts"
	],
	"exclude": [
		"../../node_modules"
	]
}
